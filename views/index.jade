extends ./layouts/layout

block content
  #app
    .ui.piled.segment
      .ui.container
        h4.ui.header Nueva Tarea
        form.ui.form
          .fields
            .twelve.wide.field
              label= 'Nombre'
              input(type='text', placeholder='Ingrese la nueva Tarea')
            .two.wide.field
              label= 'Estado'
              a.ui.red.large.tag.label= 'Pendiente'
          .field
            label= 'Descripcion'
            textarea
    
    .todos.ui.piled.segment
      h4.ui.header.= 'Pendientes'
      .ui.relaxed.aligned.animated.divided.list
        .item(v-for="todo in todos | filterBy false in 'state'")
          img.ui.avatar.image(src='/public/images/ninja-simple.png')
          .middle.aligned.content
            .header 
              {{ todo.task }}
            span.item-text {{ todo.text }}
            a.ui.red.small.tag.label= 'Pendiente'
          .right.floated.content
            button.ui.large.icon.blue.basic.button
              i.write.icon
            button.ui.large.icon.green.basic.button
              i.checkmark.icon
            
    .todos.ui.piled.segment
      h4.ui.header.= 'Realizadas'
      .ui.relaxed.aligned.animated.divided.list
        .item(v-for="todo in todos | filterBy true in 'state'")
          img.ui.avatar.image(src='/public/images/ninja-simple.png')
          .middle.aligned.content
            .header 
              {{ todo.task }}
            span.item-text {{ todo.text }}
            a.ui.green.tag.label= 'Hecho'
          .right.floated.content
            button.ui.large.icon.yellow.basic.button
              i.undo.icon
